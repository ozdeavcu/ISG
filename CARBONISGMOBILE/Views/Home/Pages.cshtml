
@section BackButton {
  <div class="back-button">
    <a asp-controller="Home" asp-action="Index">
      <i class="bi bi-arrow-left-short"></i>
    </a>
  </div>
}


<div class="page-content-wrapper py-3">
  <div class="container">
    <div class="card">
      <div class="card-body p-3">
  

        <p class="mt-3 ps-2">Bildirimler</p>

        <a class="affan-page-item" asp-controller="Notification" asp-action="NotificationUserList" asp-route-type="@NotificationType.Infringement">
          <div class="icon-wrapper">
            <i class="bi bi-book"></i>
          </div>
          Uygunsuzluk Ve Risk Bildirimi
          <i class="bi bi-arrow-right"></i>
        </a>
         
        <a class="affan-page-item" asp-controller="Notification" asp-action="NotificationUserList" asp-route-type="@NotificationType.Incident">
          <div class="icon-wrapper">
            <i class="bi bi-blockquote-left"></i>
          </div>
          Olay Bildirimi
          <i class="bi bi-arrow-right"></i>
        </a>

        <a class="affan-page-item" asp-controller="Notification" asp-action="NotificationUserList" asp-route-type="@NotificationType.ComplaintAndWish">
          <div class="icon-wrapper">
            <i class="bi bi-blockquote-left"></i>
          </div>
          Dilek Ve Şikayet Bildirimi
          <i class="bi bi-arrow-right"></i>
        </a>
        <a class="affan-page-item" asp-controller="Notification" asp-action="NotificationUserList" asp-route-type="@NotificationType.NearMiss">
          <div class="icon-wrapper">
            <i class="bi bi-book"></i>
          </div>
         Ramak Kala Bildirimi
          <i class="bi bi-arrow-right"></i>
        </a>



      </div>

    </div>

    <div class="card mt-3">
      <div class="card-body p-3 ">

        <p class="ps-2">Profil</p>

        <a class="affan-page-item" asp-controller="User" asp-action="UserEdit">
          <div class="icon-wrapper">
            <i class="bi bi-person-lock"></i>
          </div>
          Profil
          <i class="bi bi-arrow-right"></i>
        </a>

        <a class="affan-page-item" asp-controller="User" asp-action="ChangePassword">
          <div class="icon-wrapper">
            <i class="bi bi-pencil"></i>
          </div>
          Şifre Değiştir
          <i class="bi bi-arrow-right"></i>
        </a>


      </div>

    </div>
  </div>
</div>